<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    :root {
      color-scheme: dark;
    }
  </style>
</head>
<body class="bg-gray-900 text-gray-100 p-8">
  <div class="container mx-auto bg-gray-800 p-6 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold mb-6">User Management</h1>
    <form action="/update-users" method="POST">
      <table class="min-w-full bg-gray-800 border border-gray-700">
        <thead>
          <tr>
            <th class="px-4 py-2 border-b-2 border-gray-700 text-left">Username</th>
            <th class="px-4 py-2 border-b-2 border-gray-700 text-center">Is Staff</th>
            <th class="px-4 py-2 border-b-2 border-gray-700 text-center">Is Manager</th>
            <th class="px-4 py-2 border-b-2 border-gray-700 text-center">Banned</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr class="hover:bg-gray-700">
              <td class="border px-4 py-2"><%= user.username %></td>
              <td class="border px-4 py-2 text-center">
                <input type="checkbox" name="isStaff_<%= user._id %>" class="form-checkbox h-5 w-5 text-blue-600" <%= user.isStaff ? 'checked' : '' %>>
              </td>
              <td class="border px-4 py-2 text-center">
                <input type="checkbox" name="isManager_<%= user._id %>" class="form-checkbox h-5 w-5 text-blue-600" <%= user.isManager ? 'checked' : '' %>>
              </td>
              <td class="border px-4 py-2 text-center">
                <input type="checkbox" name="banned_<%= user._id %>" class="form-checkbox h-5 w-5 text-blue-600" <%= user.banned ? 'checked' : '' %>>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <div class="mt-6 text-right">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Update Users</button>
      </div>
    </form>
  </div>
</body>
</html>
